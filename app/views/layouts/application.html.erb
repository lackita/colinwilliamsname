<!DOCTYPE html>
<html>
<head>
  <title>Colin Williams</title>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "mobile" if mobile_device? %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if !mobile_device? %><div class="main"><% end %>
  <%= yield %>
  <footer>
	<% if mobile_device? %>
	  <%= link_to "Full Site", :mobile => 0 %>
	<% else %>
	  <%= link_to "Mobile Site", :mobile => 1 %>
	<% end %>
  </footer>
<% if !mobile_device? %></div><% end %>

</body>
</html>
